h1.top{
	font-family: 'Fascinate', cursive;
}
.orange{
	color:#D55C27;
}
h2{
	color:#222;
}
/* #Page Styles
================================================== */
#menu				{ float:left;  z-index:10; margin:50px 0px 0 -60px; }

#menu a	{ 
	background:#D55C27; 
	color:#FFF; 
	text-decoration:none;
	padding:6px 14px;
	font-family: "Georgia", "Times New Roman", Helvetica, Arial, sans-serif;
	font-size:13px;
	margin-left:15px;
	border-radius:10px; 
	-moz-border-radius:10px; 
	-webkit-border-radius:10px; 
	text-transform:uppercase;
	-webkit-transition-property: color, background;
	 -webkit-transition-duration: 0.5s, 0.5s;
	-moz-transition: color, background 0.5s ease-in; /* firefox */
	 -o-transition: color, background 0.5s ease-in; /* opera */
	 -webkit-transition-timing-function: linear, ease-in;
	}
					
#menu a:hover {
	background:#FBA83E; 
	color:#FFF;
	text-decoration:none;
	padding:6px 14px;
	margin-left:15px;
	border-radius:10px;
	-moz-border-radius:10px;
	-webkit-border-radius:10px;
	text-shadow: 0px 1px 3px #777;
	}

#menu a.selected	{ background:#FBA83E; color:#FFF; text-decoration:none; padding:6px 14px;
						margin-left:15px; border-radius:10px; -moz-border-radius:10px; -webkit-border-radius:10px; text-shadow: 0px 1px 2px #111;}
					
#menu li			{ float:left; }

a#login{
	display:block;
	float:right;
	margin:50px 40px 0 0;
	padding:0 20px 0 0;
	font-weight:bold;
	z-index:10;
	color:#222;
	text-decoration:none;
	font-size:13px;
	background: url(<%=asset_path "nav-login.png" %>) no-repeat right 4px;
}
a#login:hover{
	text-decoration:underline;
}

.trans{
	height: 9px;
	margin: 0;
	background: url(<%=asset_path "trans.png" %>) no-repeat top;
	opacity: 0.16;	
}

#social{
	width:74px;
	height:32px;
	margin: -12px 0 0 0;
	float:right;

}
#social li{
	
	float: left;
	list-style:none;
	margin-left:5px;
}
#social li a{
	background: url(<%=asset_path "social.jpg"%>) 0 0 no-repeat !important;
	cursor:pointer;
	height:32px;
	display:block;
	text-indent:-9999px;
}
#social li a.fb{
	width:32px;
	background-position:0 0 !important;
}
#social li a.fb:hover{
	background-position: 0 -32px !important;
}
#social li a.twit{
	width:32px;
	background-position:-32px 0 !important;
}
#social li a.twit:hover{
	background-position: -32px -32px !important;
}
.quote{
	background: url(<%=asset_path "quote-start.png" %>) no-repeat;
	padding: 0 0 0 20px;
}
.quote-end{
	background: url(<%=asset_path "quote-end.png" %>) no-repeat;
	width:12px;
	height:11px;
	display:block;
	float:right;
	margin:2px 120px 0 0;
}
